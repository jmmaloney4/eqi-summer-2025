{
    "ltex.language": "en-US",
    "ltex.enabled": true,
    "ltex.server.path": "ltex-ls",
    "latex-workshop.latex.toolchain": [
      {
        "command": "latexmk",
        "args": [
          "-synctex=1",
          "-interaction=nonstopmode",
          "-file-line-error",
          "-pdf",
          "%DOC%"
        ]
      }
    ],
    "latex-workshop.latex.autoBuild.run": "onFileChange"
  }